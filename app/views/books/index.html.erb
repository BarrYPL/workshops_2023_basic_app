<div class="container">
  <h1 class="text-center mb-5">Book List</h1>
  <div class="row">
    <% @books.each do |book| %>
      <div class="col-md-6">
        <div class="book">
          <h2 class="book-title"><%= book.title %></h2>
          <div class="book-details">by <%= book.author.name %> <%= book.author.surname %></div>
          <div class="book-details">Published in <%= book.year %></div>
          <div class="book-category">Category: <%= book.category.name %></div>
          <div class="book-btns">
            <%= link_to 'Details', book_path(book), class: "btn book-btn btn-details" %>
            <%= link_to 'Reserve', '#', class: "btn book-btn btn-reserve" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
